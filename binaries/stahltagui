#!/usr/bin/env python3
import os
import sys

this_file = os.path.abspath(__file__)   
binaries_folder = os.path.dirname(this_file) 
project_root = os.path.dirname(binaries_folder)

if project_root not in sys.path:
    sys.path.insert(0, project_root)

try:
    from components.main.stahlta import stahltagui_main
except ImportError as e:
    sys.stderr.write(
        "Error: could not import stahltagui_main from main/stahlta.py\n"
        "Make sure you run this script from the project root or that the folder structure is correct.\n"
        f"ImportError: {e}\n"
    )
    sys.exit(1)

if __name__ == "__main__":
    stahltagui_main()